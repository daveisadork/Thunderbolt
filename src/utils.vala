		} else if (localhost.match(text) ||
		           ipv4_address.match(text) ||
		           ipv6_address_e.match(text)) {
			uri = @"http://$text";
		} else if (ipv6_address.match(text)) {
			string path;
			string host;
			try {
				path = ipv6_address.replace(text, -1, 0, "");
			} catch (GLib.Error e) {
				print(e.message);
				path = "";
			}
			host = text.replace(path, "");
			uri = @"http://host$path";
			Soup.URI soup_uri = new Soup.URI(uri);
			soup_uri.set_host(host);
			uri = soup_uri.to_string(false);
		} else if (domain.match(text) || port.match(text)) {
			uri = @"http://$text";
		} else {
			string search = GLib.Uri.escape_string (text, "", false);
			uri = @"http://www.duckduckgo.com/?q=$search";
		}
		return uri;
